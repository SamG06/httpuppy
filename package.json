{
  "name": "httpuppy",
  "version": "0.2.15",
  "description": "simple abstraction layer for node web servers",
  "main": "lib/index.js",
  "bin": "bin/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:docs": "typedoc --excludeInternal",
    "dev": "make -j 2 dev-ts dev-example",
    "test": "ts-mocha test/**/*.test.ts",
    "test:watch": "ts-mocha -w test/**/*.test.ts",
    "run-ex": "nodemon examples/static-demo.js",
	"test:coverage": "nyc yarn test"
  },
  "keywords": [
    "http",
    "https",
    "express",
    "web-server",
    "server",
    "backend",
    "proxy"
  ],
  "author": "abschill",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/mime-types": "^2.1.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "expect": "^28.1.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "ts-mocha": "^10.0.0",
    "typedoc": "^0.22.17",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.3",
	"nyc": "^15.1.0"
  },
  "dependencies": {
    "http-graceful-shutdown": "^3.1.7",
    "inquirer": "^8.2.4",
    "mime-types": "^2.1.35",
    "tcp-port-used": "^1.0.2",
    "yaml": "^2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abschill/httpuppy"
  },
  "homepage": "https://github.com/abschill/httpuppy"
}
